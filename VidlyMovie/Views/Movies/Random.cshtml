@model VidlyMovie.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .popular {
        color: red;
    }
</style>
<h2>Random</h2>
@*<h2>@Model.Name</h2>
<h2>@(((Movie) ViewData["Movie"]).Name)</h2>
@ViewBag.RandomMovie.Name;*@

@{ 
    var className = Model.Customers.Count > 0 ? "popular" : null;
}

@*<h2 class="popular">@Model.Movie.Name</h2>*@
<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before.</text>
}
else
{
    <ul>
        @foreach (var m in Model.Customers)
        {
            <li>@m.Name</li>
        }
    </ul>
}

